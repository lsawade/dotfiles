Host *
    ForwardAgent yes
    ForwardX11 yes
    XAuthLocation /opt/X11/bin/xauth
    
Host tigressgateway
     User lsawade
     HostName tigressgateway.princeton.edu
     ForwardAgent yes
     ControlMaster auto
     ControlPersist yes
     ControlPath ~/.ssh/sockets/%p-%h-%r

Host adroit
     HostName adroit.princeton.edu
     ProxyJump tigressgateway
     User lsawade
     
